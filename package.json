{
  "name": "whatsapp",
  "version": "1.1.0-stable",
  "description": "Whatsapp app for linux",
  "main": "main.js",
  "build": {
    "appId": "com.uvindusl.whatsappforlinux",
    "productName": "Whatsapp for Linux",
    "linux": {
      "target": "flatpak",
      "category": "Network;Utility;Chat",
      "icon": "../assets/512x512.png"
    },
    "flatpak": {
      "finishArgs": [
        "--share=ipc",
        "--device=dri",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uvindusl/Whatsapp-for-linux.git"
  },
  "keywords": [
    "Whatsapp",
    "Linux",
    "Meta"
  ],
  "author": {
    "name": "Uvindu Sankalpa",
    "email": "uvindusankalpa2021@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uvindusl/Whatsapp-for-linux/issues"
  },
  "homepage": "https://github.com/uvindusl/Whatsapp-for-linux#readme",
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "auto-launch": "^5.0.6"
  }
}
